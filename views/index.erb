<form action="/" method="POST">
  <h3> Email </h3>
  <input type="text" name="email" value=<%= params[:email] %>>
  <%= @errors[:email] %>
  <h3> Messaggio </h3>
  <textarea rows="4" cols="50" input type="text" name="message" value=<%= params[:message] %>>
  </textarea>
  <input type="submit" value="Inserisci ">
  <%= @errors[:message] %>
</form>



<% @messages.reverse_each do |m| %>
<hr>
<p><%= m[:email] %> </p>
<p><%= m[:message] %> </p>
<% end %>
