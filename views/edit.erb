<form action="/edit/<%=params[:id]%>" method="POST">
  <h3>Edit Email </h3>
  <input type="text" name="email" value=<%= params[:email] || @message[:email] %>>
  <%= @errors[:email] %>
  <h3>Edit Messaggio </h3>
  <textarea rows="4" cols="50" input type="text" name="message" ><%= params[:message] || @message[:message] %></textarea>
  <input type="submit" value="Aggiorna">
  <%= @errors[:message] %>
</form>
